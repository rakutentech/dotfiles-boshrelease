no_color='\e[0m' # No Color
white='\e[1;37m'
black='\e[0;30m'
blue='\e[0;34m'
light_blue='\e[1;34m'
green='\e[0;32m'
light_green='\e[1;32m'
cyan='\e[0;36m'
light_cyan='\e[1;36m'
red='\e[0;31m'
light_red='\e[1;31m'
purple='\e[0;35m'
light_purple='\e[1;35m'
brown='\e[0;33m'
yellow='\e[1;33m'
gray='\e[0;30m'
light_gray='\e[0;37m'

SHRC_MY_DEPLOYMENT="<%= spec.deployment %>"
SHRC_MY_ROLE="<%= name %>/<%= index %>"
SHRC_MY_IP="<%= spec.networks.to_h.values.first.ip %>"

SHRC_NO_COLOR=$no_color
SHRC_CWD_COLOR=$light_blue
if [ "$USERNAME" = root ]; then
    SHRC_PS1_COLOR=$red
else
    SHRC_PS1_COLOR=$<%= p('shrc.prompt_color') %>
fi

unset no_color white black blue light_blue green light_green cyan light_cyan red light_red purple light_purple brown yellow gray light_gray
